    <script>
        document.addEventListener("DOMContentLoaded", function () {
    const marquees = document.querySelectorAll<HTMLElement>(".marquee"); // Seleccionar todos los elementos con la clase .marquee

    marquees.forEach(marquee => {
        // Duplicamos el contenido varias veces hasta llenar el contenedor
        const repeatCount = 10; // Ajusta según sea necesario
        let text = marquee.innerHTML;
        for (let i = 0; i < repeatCount; i++) {
            marquee.innerHTML += text;
        }

        // Aplicamos animación con JS
        let scrollAmount = 0;
        function animateMarquee() {
            scrollAmount -= 1; // Velocidad del desplazamiento
            (marquee as HTMLElement).style.transform = `translateX(${scrollAmount}px)`;

            // Si el primer elemento ha salido completamente, reiniciamos
            if (Math.abs(scrollAmount) >= (marquee.children[0] as HTMLElement).offsetWidth + 8) { 
                scrollAmount = 0;
            }

            requestAnimationFrame(animateMarquee);
        }

        animateMarquee();
    });
});

    </script>
